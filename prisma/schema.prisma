generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  name       String
  email      String       @unique
  password   String
  properties Properties[]
  bookings   Booking[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  Notification Notification[]
}

model Properties {
  id            Int      @id @default(autoincrement())
  userId        Int
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  accountnumber String   @unique
  name          String
  ptype         String
  measurement   String
  pricepermonth Decimal  @default(0)
  description   String
  anemities     String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Booking {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sdate     DateTime
  edate     DateTime
  fullname  String
  email     String
  phone     String
  progress  String
  note      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  isRead    Boolean  @default(false)
  updatedAt DateTime @updatedAt
}
